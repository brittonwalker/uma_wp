<div class="testimonials" data-component="testimonials">
  <div class="testimonials-container container overflow-auto">
    <div class="swiper">
      <div class="swiper-wrapper">
        {% for i in 1..3 %}
        <div class="swiper-slide">
          <div class="testimonial">
            <div class="testimonial-rating mb-6 flex gap-1">
              {% for star in 1..5 %} {% include "svg/star.twig" %} {% endfor %}
            </div>
            <p class="testimonial-quote text-[30px] lg:text-5xl font-bold leading-[120%] mb-4">
              Joining this BJJ school has been life-changing. The instructors are top-notch, and the
              community is incredibly supportive. I've gained confidence and fitness I never thought
              possible.
            </p>
            <div class="testimonial-author flex items-center gap-4 text-[18px] mt-12">
              <div class="testimonial-avatar w-14 h-14 rounded-full overflow-hidden bg-red-400">
                {#
                <img
                  src="{{ theme.link }}/assets/images/avatar-placeholder.png"
                  alt="Student Avatar"
                />
                #}
              </div>
              <div class="testimonial-info flex flex-col gap-0.5">
                <p class="testimonial-name font-bold">Alex Johnson</p>
                <p class="testimonial-role text-secondary">BJJ Student</p>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="testimonials__pagination"></div>
    </div>
  </div>
</div>